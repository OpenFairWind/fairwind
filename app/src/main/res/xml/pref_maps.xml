<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Source">

    <Preference
        android:title="@string/pref_title_maps_filename"
        android:key="pref_key_maps_filename"
        />

    <EditTextPreference
        android:key="pref_key_maps_path"
        android:title="@string/pref_title_maps_path"
        android:defaultValue="@string/pref_default_maps_path"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />


    <EditTextPreference
        android:key="pref_key_maps_download_url"
        android:title="@string/pref_title_maps_download_url"
        android:defaultValue="@string/pref_default_maps_download_url"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <Preference
        android:title="@string/pref_title_maps_download"
        android:summary="@string/pref_description_maps_download"
        android:key="pref_key_maps_download"
        />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Boat">

    <CheckBoxPreference
        android:key="pref_key_maps_boat"
        android:title="@string/pref_title_maps_boat"
        android:defaultValue="@bool/pref_default_maps_boat"
        android:checked="@bool/pref_default_maps_boat" />

    <CheckBoxPreference
        android:key="pref_key_maps_track"
        android:title="@string/pref_title_maps_track"
        android:defaultValue="@bool/pref_default_maps_track"
        android:checked="@bool/pref_default_maps_track"/>

    <EditTextPreference
        android:key="pref_key_maps_predictor"
        android:title="@string/pref_title_maps_predictor"
        android:defaultValue="@integer/pref_default_maps_predictor"
        android:selectAllOnFocus="true"
        android:inputType="numberDecimal"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <CheckBoxPreference
        android:key="pref_key_maps_speed"
        android:title="@string/pref_title_maps_speed"
        android:defaultValue="@bool/pref_default_maps_speed"
        android:checked="@bool/pref_default_maps_speed"/>

    <CheckBoxPreference
        android:key="pref_key_maps_heading"
        android:title="@string/pref_title_maps_heading"
        android:defaultValue="@bool/pref_default_maps_heading"
        android:checked="@bool/pref_default_maps_heading"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Wind">

    <CheckBoxPreference
        android:key="pref_key_maps_windrose"
        android:title="@string/pref_title_maps_windrose"
        android:defaultValue="@bool/pref_default_maps_windrose"
        android:checked="@bool/pref_default_maps_windrose"/>

    <CheckBoxPreference
        android:key="pref_key_maps_apparent_wind"
        android:title="@string/pref_title_maps_apparent_wind"
        android:defaultValue="@bool/pref_default_maps_apparent_wind"
        android:checked="@bool/pref_default_maps_apparent_wind" />

    <CheckBoxPreference
        android:key="pref_key_maps_true_wind"
        android:title="@string/pref_title_maps_true_wind"
        android:defaultValue="@bool/pref_default_maps_true_wind"
        android:checked="@bool/pref_default_maps_true_wind" />

    </PreferenceCategory>
</PreferenceScreen>