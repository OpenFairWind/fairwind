<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="pref_key_nmea0183tcpipclientdatasource_active"
        android:title="@string/perf_title_nmea0183tcpipclientdatasource_active"
        android:defaultValue="@bool/pref_default_nmea0183tcpipclientdatasource_active" />

    <EditTextPreference
        android:key="pref_key_nmea0183tcpipclientdatasource_host"
        android:title="@string/pref_title_nmea0183tcpipclientdatasource_host"
        android:defaultValue="@string/pref_default_nmea0183tcpipclientdatasource_host"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="pref_key_nmea0183tcpipclientdatasource_port"
        android:title="@string/pref_title_nmea0183tcpipclientdatasource_port"
        android:defaultValue="@integer/pref_default_nmea0183tcpipclientdatasource_port"
        android:selectAllOnFocus="true"
        android:inputType="numberDecimal" />

    <CheckBoxPreference
        android:key="pref_key_nmea0183tcpipserver_isinput"
        android:title="@string/perf_title_nmea0183tcpipclientdatasource_isinput"
        android:defaultValue="@bool/pref_default_nmea0183tcpipclientdatasource_isinput" />

    <CheckBoxPreference
        android:key="pref_key_nmea0183tcpipclientdatasource_isoutput"
        android:title="@string/perf_title_nmea0183tcpipclientdatasource_isoutput"
        android:defaultValue="@bool/pref_default_nmea0183tcpipclientdatasource_isoutput" />



</PreferenceScreen>