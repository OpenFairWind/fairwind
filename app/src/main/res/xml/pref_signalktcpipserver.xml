<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="pref_key_signalktcpipserver_active"
        android:title="@string/perf_title_signalktcpipserver_active"
        android:defaultValue="@bool/pref_default_signalktcpipserver_active" />

    <EditTextPreference
        android:key="pref_key_signalktcpipserver_port"
        android:title="@string/pref_title_signalktcpipserver_port"
        android:defaultValue="@integer/pref_default_signalktcpipserver_port"
        android:selectAllOnFocus="true"
        android:inputType="numberDecimal" />

    <CheckBoxPreference
        android:key="pref_key_signalktcpipserver_isinput"
        android:title="@string/perf_title_signalktcpipserver_isinput"
        android:defaultValue="@bool/pref_default_signalktcpipserver_isinput" />

    <CheckBoxPreference
        android:key="pref_key_signalktcpipserver_isoutput"
        android:title="@string/perf_title_signalktcpipserver_isoutput"
        android:defaultValue="@bool/pref_default_signalktcpipserver_isoutput" />

</PreferenceScreen>