<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="pref_key_signalktcpipclientdatasource_active"
        android:title="@string/perf_title_signalktcpipclientdatasource_active"
        android:defaultValue="@bool/pref_default_signalktcpipclientdatasource_active" />

    <EditTextPreference
        android:key="pref_key_signalktcpipclientdatasource_host"
        android:title="@string/pref_title_signalktcpipclientdatasource_host"
        android:defaultValue="@string/pref_default_signalktcpipclientdatasource_host"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="pref_key_signalktcpipclientdatasource_port"
        android:title="@string/pref_title_signalktcpipclientdatasource_port"
        android:defaultValue="@integer/pref_default_signalktcpipclientdatasource_port"
        android:selectAllOnFocus="true"
        android:inputType="numberDecimal" />

    <CheckBoxPreference
        android:key="pref_key_signalktcpipserver_isinput"
        android:title="@string/perf_title_signalktcpipclientdatasource_isinput"
        android:defaultValue="@bool/pref_default_signalktcpipclientdatasource_isinput" />

    <CheckBoxPreference
        android:key="pref_key_signalktcpipclientdatasource_isoutput"
        android:title="@string/perf_title_signalktcpipclientdatasource_isoutput"
        android:defaultValue="@bool/pref_default_signalktcpipclientdatasource_isoutput" />



</PreferenceScreen>