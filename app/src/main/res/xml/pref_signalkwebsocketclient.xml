<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="pref_key_signalkwebsocketclient_active"
        android:title="@string/perf_title_signalkwebsocketclient_active"
        android:defaultValue="@bool/pref_default_signalkwebsocketclient_active" />

    <EditTextPreference
        android:key="pref_key_signalkwebsocketclient_uri"
        android:title="@string/pref_title_signalkwebsocketclient_uri"
        android:defaultValue="@string/pref_default_signalkwebsocketclient_uri"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="pref_key_signalkwebsocketclient_uuid"
        android:title="@string/pref_title_signalkwebsocketclient_uuid"
        android:summary="@string/pref_description_signalkwebsocketclient_uuid"
        android:defaultValue="@string/pref_default_signalkwebsocketclient_uuid"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <CheckBoxPreference
        android:key="pref_key_signalkwebsocketclient_isinput"
        android:title="@string/perf_title_signalkwebsocketclient_isinput"
        android:defaultValue="@bool/pref_default_signalkwebsocketclient_isinput" />

    <CheckBoxPreference
        android:key="pref_key_signalkwebsocketclient_isoutput"
        android:title="@string/perf_title_signalkwebsocketclient_isoutput"
        android:defaultValue="@bool/pref_default_signalkwebsocketclient_isoutput" />

</PreferenceScreen>