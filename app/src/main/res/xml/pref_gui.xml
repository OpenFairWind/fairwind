    <CheckBoxPreference
        android:key="pref_key_gui_keep_screen_on"
        android:title="@string/pref_title_gui_keep_screen_on"
        android:defaultValue="@bool/pref_default_gui_keep_screen_on" />

</PreferenceScreen>