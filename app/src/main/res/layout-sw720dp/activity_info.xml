<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="10dp"
    android:orientation="vertical"
    android:id="@+id/layout_root"
    tools:context=".captain.info.InfoActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="20dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imageview_logo"
            android:src="@drawable/imagebutton_info"
            android:layout_gravity="center" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="5dp"
            android:paddingTop="20dp"
            android:layout_gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/info_title"
                android:id="@+id/textView_info_title"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/info_version"
                android:id="@+id/textView_info_version"
                android:layout_gravity="center"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info_description"
        android:id="@+id/textView_info_description"
        android:layout_gravity="center"
        android:textStyle="italic"
        android:paddingTop="15dp"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info_group_title"
        android:id="@+id/textView_info_group_title"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingTop="15dp"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info_group"
        android:id="@+id/textView_info_group"
        android:textStyle="italic"
        android:layout_gravity="center"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info_team"
        android:id="@+id/textView_info_team"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:textSize="20sp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="20dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Ok"
            android:id="@+id/btn_ok"
            android:layout_gravity="center"
            android:onClick="btn_ok_onClick"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textLinks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtLinks"/>

</LinearLayout>

