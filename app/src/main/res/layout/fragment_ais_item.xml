<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="?listPreferredItemHeight"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9898a6"
        android:textColor="#f90000"
        android:orientation="horizontal" android:layout_gravity="center_vertical" android:weightSum="10">


        <ImageView
            android:id="@+id/item_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <!--android:layout_width="64dp"
            android:layout_height="64dp"-->

        </ImageView>


        <TextView
            android:id="@+id/item_mmsi"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="24sp"
            android:text="">
        </TextView>

        <TextView
            android:id="@+id/item_name"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:textSize="24sp"
            android:text="">
        </TextView>

        <TextView
            android:id="@+id/item_range"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="24sp"
            android:text="">
        </TextView>
        <TextView
            android:id="@+id/item_bearing"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="24sp"
            android:text="">
        </TextView>
        <TextView
            android:id="@+id/item_speed"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="24sp"
            android:text="">
        </TextView>
        <TextView
            android:id="@+id/item_course"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="24sp"
            android:text="">
        </TextView>

        <ImageView
            android:id="@+id/handle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|right"
            android:scaleType="center"
            android:layout_weight="1"
            android:src="@drawable/ic_reorder_grey_500_24dp" />

    </LinearLayout>
</FrameLayout>