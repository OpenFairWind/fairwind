<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600dp"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/dialog_datalistenerpreferences" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" android:weightSum="10">

                <TextView
                    android:id="@+id/txt_paire_device"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/textView_paire_device"
                    android:text="@string/perf_title_nmea0183bluetooth_paire_device" />

                <TextView
                    android:id="@+id/textView_paire_device"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/button_choose_device"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="Choose Device" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" android:weightSum="10">

                <TextView
                    android:id="@+id/txt_connected_device"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/textView_device_connected"
                    android:text="@string/perf_title_nmea0183bluetooth_device_connected" android:layout_weight="2"/>

                <TextView
                    android:id="@+id/textView_device_connected"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:layout_weight="8"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>