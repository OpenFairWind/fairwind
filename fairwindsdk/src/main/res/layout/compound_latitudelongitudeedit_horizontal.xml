<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">

    <TextView
        android:id="@+id/textView_lat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lat:" />

    <EditText
        android:id="@+id/editText_lat_degs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView_lat_deg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="°" />

    <EditText
        android:id="@+id/editText_lat_mins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView_lat_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="'" />

    <EditText
        android:id="@+id/editText_lat_secs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView_lat_sec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="''" />

    <Spinner
        android:id="@+id/spinner_southnorth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:entries="@array/latitude_southnorth_array"/>

    <TextView
        android:id="@+id/textView_lon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lon:" />

    <EditText
        android:id="@+id/editText_lon_degs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView_lon_deg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="°" />

    <EditText
        android:id="@+id/editText_lon_mins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView_lon_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="'" />

    <EditText
        android:id="@+id/editText_lon_secs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:inputType="number" />


    <TextView
        android:id="@+id/textView_lon_sec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="''" />

    <Spinner
        android:id="@+id/spinner_westeast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:entries="@array/longitude_westeast_array"/>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_mylocation" />
    </LinearLayout>




</merge>