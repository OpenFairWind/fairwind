<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:id="@+id/layout_infowindow_boat" android:background="#eeeeee">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:orientation="horizontal">

        <TextView
            android:text="MMSI:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@+id/textView_boat_mmsi"
             />

        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_boat_mmsi"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:orientation="horizontal">
    <TextView
        android:text="Name:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@+id/textView_boat_name"
        />

    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_boat_name"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView
            android:text="Status:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@+id/textView_boat_status"
            />

        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_boat_status"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView
            android:text="Course:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@+id/textView_boat_course"
            />

        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_boat_course"
            />
        <TextView
            android:text="Speed:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@+id/textView_boat_speed"
            />

        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_boat_speed"
            />
    </LinearLayout>
</LinearLayout>